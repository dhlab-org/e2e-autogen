{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./config/*"],
      "@core/*": ["./core/*"],
      "@packages/*": ["./packages/*"]
    }
  },
  "include": ["core/**/*", "packages/**/*", "config/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist", ".yarn"]
}
